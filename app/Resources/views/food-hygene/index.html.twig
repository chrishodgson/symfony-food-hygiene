{% extends 'base.html.twig' %}

{% block body %}

    <h4>Local Authority Food Hygiene Ratings</h4>

    <p>This screen shows how food hygiene ratings are distributed by percentage across a selected Local Authority.</p>

    {{ form_start(search_form, {'attr': {'class': 'form-inline', 'id': 'local_authority_search_form'} }) }}
    {{ form_end(search_form) }}

    {% if summary %}
    <table id="ratings-table" class="table table-striped table-condensed">
        <thead>
            <tr>
                <th>Rating</th>
                <th id="ratings-table-header">Percentage</th>
            </tr>
        </thead>
        <tbody>
        {% for item in summary %}
            <tr>
                <td>{{ item.rating }}</td>
                <td>{{ item.percentage }}%</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    {% endif %}

{% endblock %}
